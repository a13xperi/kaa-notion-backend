# ===========================================
# SAGE MVP Backend Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# Server Configuration
NODE_ENV=development
PORT=3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://sage:sage_dev_password@localhost:5432/sage_dev

# Redis (Optional - for caching and queues)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Stripe Payment Processing
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Product/Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_TIER_1=price_...
STRIPE_PRICE_TIER_2=price_...
STRIPE_PRICE_TIER_3=price_...

# Supabase Storage
# Get from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_KEY=eyJ...
SUPABASE_STORAGE_BUCKET=deliverables

# Notion Integration
# Get from: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_...
NOTION_DATABASE_ID=...
NOTION_PROJECTS_DB=...
NOTION_LEADS_DB=...

# Email - Resend (for transactional emails)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_...
FROM_EMAIL=SAGE <noreply@sage.com>
APP_NAME=SAGE
APP_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Sentry Error Tracking & Performance
# Get DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=https://your-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production  # Optional - defaults to NODE_ENV

# ===========================================
# Priority 10: Subscription Billing (Stripe)
# ===========================================
# Create products in Stripe Dashboard:
# - Sprout (Tier 2): $49/month or $470/year
# - Canopy (Tier 3): $99/month or $950/year
STRIPE_SPROUT_MONTHLY_PRICE_ID=price_xxxxx
STRIPE_SPROUT_YEARLY_PRICE_ID=price_xxxxx
STRIPE_CANOPY_MONTHLY_PRICE_ID=price_xxxxx
STRIPE_CANOPY_YEARLY_PRICE_ID=price_xxxxx

# ===========================================
# Priority 10: Push Notifications (PWA)
# ===========================================
# Generate VAPID keys with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@yourdomain.com
