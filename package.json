{
  "name": "sage-mvp-platform",
  "version": "1.0.0",
  "description": "SAGE MVP Platform - Tiered landscape architecture services",
  "private": true,
  "engines": {
    "node": ">=18.0.0 <23.0.0"
  },
  "workspaces": [
    "kaa-app",
    "server",
    "shared"
  ],
  "scripts": {
    "quickstart": "bash scripts/quickstart.sh",
    "dev": "concurrently \"cd server && npm run dev\" \"cd kaa-app && npm run dev\"",
    "start": "cd server && npm start",
    "build": "cd server && npm run build && cd ../kaa-app && npm run build",
    "test": "cd server && npm test && cd ../kaa-app && npm test -- --watchAll=false",
    "test:backend": "cd server && npm test",
    "test:frontend": "cd kaa-app && npm test -- --watchAll=false",
    "install-all": "npm install && cd kaa-app && npm install && cd ../server && npm install",
    "prisma:generate": "npx prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema=./prisma/schema.prisma",
    "prisma:studio": "npx prisma studio --schema=./prisma/schema.prisma",
    "prisma:deploy": "npx prisma migrate deploy --schema=./prisma/schema.prisma",
    "prisma:seed": "npx prisma db seed --schema=./prisma/schema.prisma",
    "prisma:reset": "npx prisma migrate reset --force --schema=./prisma/schema.prisma",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed",
    "db:reset": "npm run prisma:reset",
    "lint": "cd server && npm run lint && cd ../kaa-app && npm run lint",
    "docker:dev": "docker compose -f docker-compose.dev.yml up",
    "docker:prod": "docker compose up -d --build",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:report": "npx playwright show-report",
    "generate:api-types": "npx ts-node scripts/generate-api-types.ts",
    "verify-env": "node scripts/verifyEnv.js",
    "verify-indexes": "node scripts/verifyDatabaseIndexes.js",
    "phase0-setup": "node scripts/phase0-setup.js",
    "test:e2e-sync": "node scripts/test-end-to-end-sync.js",
    "configure-db": "bash ./scripts/configure-database.sh",
    "create-indexes": "node scripts/create-indexes-manually.js"
  },
  "dependencies": {
    "@notionhq/client": "^5.6.0",
    "@supabase/supabase-js": "^2.45.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "form-data": "^4.0.4",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.7",
    "openai": "^4.104.0",
    "stripe": "^17.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@prisma/client": "^5.20.0",
    "@types/bcrypt": "^5.0.2",
    "concurrently": "^8.2.2",
    "jest-util": "^30.2.0",
    "openapi-typescript": "^7.10.1",
    "prisma": "^5.20.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "ts-node prisma/seed.ts"
  }
}
